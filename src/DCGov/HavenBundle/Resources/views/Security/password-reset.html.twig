{% extends 'DCGovHavenBundle::base.html.twig' %}
{% block body %}
	{{ parent() }}
    
	<div class="container" id="login-form-container">
		<form class="form-signin" id="login-form"
			action="{{ path('password_success') }}" method="POST">
			<h2 class="form-signin-heading col-xs-11 col-md-11">Request Password</h2>
			
			<div class="col-xs-11 col-md-11 margin-top-1em">
				<label for="_username" class="">Enter Username</label>	
				<input id="email" class="form-control" name="_username" type="email" placeholder="Enter Username" value="" required autofocus />
				<i class="fa fa-user form-control-feedback"></i>
			</div>
							
			<div class="col-xs-11 col-md-11 margin-top-1em">
				<button class="btn btn-lg btn-primary btn-block" type="submit">Continue</button>
			</div>

		</form>
	</div>
{% endblock body %}	